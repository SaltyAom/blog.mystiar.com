@font-face
    font-family "Product Sans"
    src url("/fonts/Product_Sans_Regular.ttf") format("truetype")
    font-display auto

@font-face
    font-family Parkas
    src url("/fonts/CSPraKas.otf") format("opentype")
    font-display auto

:root
    --primary-text: #222
    --secondary-text: #444
    --tertiary-text: #666

    --link #0065ff
    --link-fade rgba(0,123,255,.125)

    --border #ceced2
    --background #f9fafc
    --preload #efeff4
    --root #fff

    --story-width 100%

body, #__next
    width 100%
    margin 0
    background-color var(--background)
    overflow-x hidden

*
    box-sizing border-box
    font-family "Product Sans", -apple-system, BlinkMacSystemFont, Parkas, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

::selection, ::-webkit-selection
    background-color rgba(12, 235, 160, .25)