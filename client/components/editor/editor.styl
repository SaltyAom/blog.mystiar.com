#editor-inline
    display flex
    flex-direction column
    justify-content flex-start
    align-items flex-start
    width var(--story-width)
    margin 0 auto

#editor-link
    display block
    text-decoration none
    margin 15px auto
    border-radius 8px
    transition background-color .2s ease-out

    &:hover,
    &:focus
        background-color var(--preload)

#editor-inline
    flex-direction row
    align-items center
    margin 0
    padding 15px 5%

    & > .image-wrapper
        display inline-block
        width 64px
        height 64px
        margin 0 20px 0 0
        border-radius 60px
        background-color var(--preload)

        & > .image
            width inherit
            height inherit
            border-radius inherit
            object-fit cover
            object-position center
            border 1px solid var(--border)

    & > .detail
        flex 1
        height 120px
        display flex
        flex-direction column
        justify-content center
        align-items flex-start
        
        & > .name
            display block
            font-size 24px
            color var(--primary-text)
            margin 0 0 15px 0

        & > .bio
            display block
            font-size 14px
            color var(--tertiary-text)
            margin 0 0 0 0
            line-height 1.5em

@media screen and (min-width 568px) and (max-width 767.9px)
    #editor-inline
        & > .image-wrapper
            width 96px
            height 96px

        & > .detail
            & > .name
                font-size 32px

            & > .bio
                font-size 18px

@media screen and (min-width 768px) and (max-width 1023.9px)
    #editor-inline
        & > .image-wrapper
            width 96px
            height 96px
